@model IEnumerable<Sach>
@{
    ViewData["HeadTitle"]="quản lý sản phẩm";
    var chck = ""; //check giới tính
}
<section class="content-header">
    <h1>
        Danh sách Sản phẩm
        <a class="btn btn-primary pull-right" asp-action="ThemSach" asp-controller="QuanLySanPham">
            <i class="fa fa-user-plus fa-fw"></i> 
            Thêm Sản phẩm mới
        </a>
    </h1>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <!-- small box -->
            <div class="box box-aqua">
                <div class="box-body">
                    <table class="table table-bordered table-responsive" id="tb_Sach">
                        <thead>
                            <tr>
                                <th>Tên sách</th>  
                                <th>Tên tác giả</th>  
                                <th>Tên nhà xuất bản</th>  
                                <th>Số lượng</th>  
                                <th>Đơn giá</th>  
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.TenSach</td>
                                    <td>@item.TacGia.TenTacGia</td>
                                    <td>@item.NhaXuatBan.TenNhaXuatBan</td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.DonGia.ToString("#,0")</td>
                                    <td>
                                        <a class="btn btn-default btn-xs btn-editNhanvien" asp-action="SuaSach" asp-controller="QuanLySanPham" asp-route-id="@item.id">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="XoaSach"asp-controller="QuanLySanPham" asp-route-id="@item.id" class="btn btn-danger btn-xs">
                                            <i class="fa fa-fw fa-remove"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts
{
    <script>
    $(function()
    {
       $("#tb_Sach").dataTable();
        @if(ViewData["Message"]!=null)
        {
            @:alert("@ViewData["Message"]");
        }
    })
    
    </script>
}