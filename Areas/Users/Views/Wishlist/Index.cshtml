@{
    Layout="_MainLayout";
    ViewData["HeadTitle"]="Wishlist";
}
@model List<QuanLyBanSach.Models.Wishlist>
<h3>Wishlist của bạn</h3> 
@if(Model.Count >0)
{
    <section id="cart_items">
        <div class="table-responsive cart_info">
            <table class="table table-condensed" style="margin-bottom:0px ">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description">Tên sách</td>
                        <td>Tình trạng</td>
                        <td>Xóa</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td class="cart_product">
                                <img src="~/images/Sach/@item.Sach.HinhAnh" class="" alt="">
                            </td>
                            <td class="cart_description" style="width: 250px;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
                                <h4><a asp-controller="Sach" asp-action="Index" asp-route-id="@item.Sach.id" asp-area="">@item.Sach.TenSach</a></h4>
                                <p>ID sách: @item.Sach.id</p>
                                <p>Đơn giá:@item.Sach.DonGia.ToString("#,0") đ</p>
                            </td>
                            <td class="cart_price">
                               @((item.Sach.SoLuong>0)?"Còn hàng":"Hết hàng")
                            </td>
                            <td class="cart_delete" style="display:initial">
                                <a title="Xóa khỏi wishlist" class="cart_quantity_delete" asp-area="Users" asp-route-id="@item.Sach.id" asp-action="XoaKhoiWishList" asp-controller="Wishlist"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </section>
}
else
{
    <section id="cart_items">
        <div class="container">
    <h3>
        Bạn chưa có món hàng nào trong wishlist
    </h3>
    
    <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-default add-to-cart" >Trở về trang chủ</a>
    </div>  
    </section>
}