@using QuanLyBanSach.Models
@model List<Sach>

@if(Model.Count>0)
{
    <h2 class="title text-center">Sách cùng Nhà xuất bản</h2>
    <div class="owl-carousel">   
    @foreach(var item in Model)
    {
        <div class="text-center">
            <a asp-action="index" asp-controller="Sach" asp-route-id="@item.id" asp-route-TenSach="@item.TenSach.Replace(" ","-")">
                <img src="~/images/Sach/@item.HinhAnh" class="center-block" alt="" style="height:100%; width:auto; max-height:130px">
                <h5>@item.TenSach</h5>
            </a>
        </div>
    }
    </div>
}