@using QuanLyBanSach.Models
@model List<ChuDe>
<h2>Chủ đề</h2>
<div class="panel-group category-products" id="accordian"><!--category-productsr-->
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><a asp-action="SachGiamGia" asp-controller="DanhMuc">Sách giảm giá</a></h4>
        </div>
    </div>
    @foreach(var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordian" href="#sidebar_ChuDe_@item.Id">
                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                        @item.TenChuDe
                    </a>
                </h4>
            </div>
            <div id="sidebar_ChuDe_@item.Id" class="panel-collapse collapse">
                <div class="panel-body">
                    <ul>
                      
                        @{
                            var key = 0;
                            var DanhMucGroup = item.Saches.GroupBy(x=>x.DanhMuc);
                            foreach(var DanhMucItem in DanhMucGroup)
                            {
                                var danhmuc = @DanhMucItem.ElementAt(key++).DanhMuc;
                                <li><a asp-action="Index" asp-route-id="@danhmuc.Id" asp-controller="DanhMuc">@danhmuc.TenDanhMuc</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
    
